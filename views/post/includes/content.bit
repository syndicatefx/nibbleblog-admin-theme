	// Initialized WYSIWYG Editor
	tinyMCE.init({
		mode : "textareas",

		theme : "advanced",

		plugins : "paste, pagebreak, inlinepopups, pre, fullscreen",
		paste_text_sticky : true,

		inlinepopups_skin: "smskin2",

		entity_encoding : "raw",

		formats:{
			alignleft:{selector:'img', attributes:{class:"align_left", style:"float: left;"} },
			alignright:{selector:'img', attributes:{class:"align_right", style:"float: right;"} }
